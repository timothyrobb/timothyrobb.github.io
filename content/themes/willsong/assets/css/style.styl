//=====  INDEX header styling   ================================
#themecover_willsong 
	background-position center center
	-webkit-background-size cover
	background-size cover
	height 102%
	left 0
	position fixed
	top 0
	width 102%
	z-index -100

#indexhead_willsong
	background-color rgba(bkg, bannerop)
	box-shadow 0 4px 8px shw
	padding-bottom 50px
	overflow hidden
	position relative
	text-align center
	width 100%
	z-index 40

	#description_willsong
		position relative
		margin 0px auto

	#blogname_willsong
		border 3px solid hdg
		color hdg
		display inline-block
		margin 50px 10px
		padding 0 10px
		position relative
		text-decoration none
		text-transform uppercase

		h1
			font-family 'Roboto Condensed', sans-serif
			font-size 2em
			line-height 0em

	#logo_willsong
		max-height 150px
		position relative
		max-width 280px
		margin 50px 10px


//===== POST Header Styling  ================================
#posthead_willsong
	background-color rgba(bkg, bannerop)
	box-shadow 0 4px 8px shw
	overflow hidden
	position relative
	text-align center
	width 100%
	z-index 40

	#description_willsong
		position relative
		margin 0px auto

	#blogname_willsong
		border 3px solid hdg
		color hdg
		display inline-block
		margin 30px 10px
		padding 0 10px
		position relative
		text-decoration none
		text-transform uppercase

		h1
			font-family 'Roboto Condensed', sans-serif
			font-size 2em
			line-height 0em

	#logo_willsong
		max-height 100px
		position relative
		max-width 200px
		margin 10px



//=====  MAIN Content Styling  ================================
#main_willsong
	background-color bkg
	box-shadow 0 4px 8px shw
	overflow hidden
	padding 40px 0
	position relative
	z-index 20
	width 100%

	#articles_willsong
		position relative
		margin 0px auto

		.article_willsong
			position relative
			margin-bottom 50px

			.postdetails_willsong
			.mainright_willsong
				display inline-block
				overflow hidden
				vertical-align top

			.mainright_willsong
				margin-top 150px
				opacity 0.0

			.postcontent_willsong 
				a
					text-decoration underline
				
				img
					height auto
					position relative
					width 100%

				p:last-child:after
					content "..."

			.readmore_willsong
				border 1px solid hdg
				border-radius 4px
				display inline-block
				font-size 0.8em
				font-weight bold
				margin 30px 0
				padding 5px 10px

			.lores_postdetails_willsong
				margin-bottom 20px
				position relative
				font-size 0.8em

				time
					margin-right 20px

	#thearticle_willsong
		position relative
		margin 0px auto
		
		.articledetails_willsong
			font-size 0.8em
			margin-bottom 40px

			.date_willsong
				margin-right 20px

		.postcontent_willsong 
				a
					text-decoration underline

				blockquote
					border-left 5px solid hdg
					padding 1px 0 1px 40px
					margin 0
				
				input[type="text"]
					border 1px solid txt
					border-radius 4px
					padding 5px 10px

					&:focus
						outline none

				img
					max-width 100%
					height auto

		#author_willsong
			margin-bottom 70px
			position relative

			#authorimage_willsong
				border-radius 50%
				float left
				height 150px
				margin-right 20px
				overflow hidden
				width 150px

				img 
					height auto
					width 100%

			#authorname_willsong
				color hdg
				font-size 1.4em
				font-weight 700
				line-height 2em

			#authorwebsite_willsong
				text-decoration underline
		
		#sharepost_willsong
			border-bottom 1px solid brd
			border-top 1px solid brd
			color hdg
			margin 70px 0
			padding 20px 0
			position relative
			text-align center

			.sharelink_willsong
				color txt
				margin 0 5px
				font-size 1.4em

	#pagination_willsong
		padding 10px 0
		margin 20px 0
		position relative
		text-align center

		.older-posts
		.newer-posts
			border 1px solid hdg
			border-radius 4px
			display inline-block
			font-size 0.8em
			font-weight bold
			padding 5px 10px
			position absolute
			top 0

		.older-posts
			right 0

		.newer-posts
			left 0

	#disqus_thread
		background-color dsqs
		margin 70px auto
		padding 3%
		position relative
		width 94%



