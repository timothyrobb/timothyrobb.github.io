//=====  Responsive Layout Measures   ================================
@media screen and (min-width: 320px)
	.respowidth_willsong
		width 300px
		overflow hidden

	.article_willsong
		border-bottom 1px solid brd

	#pagination_willsong
		font-size 0.8em

		.page-number
			opacity 0.0

	.postdetails_willsong
		width 0

	.mainright_willsong
		width 100%

@media screen and (min-width:480px)
	.respowidth_willsong
		width 440px

	#pagination_willsong
		font-size 0.8em

		.page-number
			opacity 1.0

@media screen and (min-width:768px)
	.respowidth_willsong
		width 720px

	.article_willsong
		border-bottom none

	#pagination_willsong
		font-size 1em

	.postdetails_willsong
		color hdg
		font-size 0.8em
		width 180px
		padding-right 10px
		padding-top 3em

	.mainright_willsong
		width 515px
		padding-left 14px
		border-left 1px solid brd

	.lores_postdetails_willsong
		display none

@media screen and (min-width:960px)
	.respowidth_willsong
		width 920px

	.postdetails_willsong
		width 190px
		padding-right 10px

	.mainright_willsong
		width 700px
		padding-left 19px

@media screen and (min-width:1280px)
	.respowidth_willsong
		width 1240px

	.mainright_willsong
		width 1020px
		padding-left 19px




