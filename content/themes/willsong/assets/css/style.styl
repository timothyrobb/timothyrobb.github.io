//=====  Importing Icomoon Font for our Icons   ================================
@font-face 
	font-family: 'icomoon';
	src:url('../fonts/icomoon-selection/icomoon.eot');
	src:url('../fonts/icomoon-selection/icomoon.eot?#iefix') format('embedded-opentype'),
		url('../fonts/icomoon-selection/icomoon.ttf') format('truetype'),
		url('../fonts/icomoon-selection/icomoon.woff') format('woff'),
		url('../fonts/icomoon-selection/icomoon.svg#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;

[class^="icon-"] 
[class*=" icon-"] 
	font-family 'icomoon'
	speak none
	font-style normal
	font-weight normal
	font-variant normal
	text-transform none
	line-height 1
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale



